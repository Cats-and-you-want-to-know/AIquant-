@font-face {
  font-family: 'myiconfont';
  src: url('//at.alicdn.com/t/font_724078_43qt7yvrrsk.eot');
  src: url('//at.alicdn.com/t/font_724078_43qt7yvrrsk.eot?#iefix') format('embedded-opentype'),
         url('//at.alicdn.com/t/font_724078_43qt7yvrrsk.woff') format('woff'),
        url('//at.alicdn.com/t/font_724078_43qt7yvrrsk.ttf') format('truetype'),
        url('//at.alicdn.com/t/font_724078_43qt7yvrrsk.svg#iconfont') format('svg')
}

.iconfont {
  font-family: "myiconfont" !important;
  font-size: 16px;
  font-style: normal;
}
.video-item{
  width:100%;
  margin-top: 10rpx;
  overflow: hidden;
}
.video{
  width:100%;
  height:500rpx;
}
.video-image{
  width:100%;
  height:500rpx;
  position: relative;
}
.video-image image{
  width: 100%;
  height:100%;
}
.icon-bofang:before{
  content:'\e606'
}
.icon-bofang{
  position: absolute;
  font-size:100rpx;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
  color:#000;
}
.video-title{
  position: absolute;
  width:100%;
  height:70rpx;
  background: linear-gradient(#fff,transparent);
  top:0;
  color:#000;
  font-size:40rpx;
  font-weight: bold;
}
.commentArea{
  height:500rpx;
  overflow: auto;

}
.commentContext{
  display: flex;
  position: relative;
  align-items: center;
  margin:0 20rpx;
}
.comment-name{
  position: absolute;
  top: 0;
  width:30%;
  height:100%;
  text-align: center;
  color:#007aff;
}
.comment-context{
  width:70%;
  margin-left: 30%;
}
.footer{
  width:100%;
  position: absolute;
  bottom:0;
}
.btn{
  width:100%;
  background-color: #007aff;
  color:#fff;
}
